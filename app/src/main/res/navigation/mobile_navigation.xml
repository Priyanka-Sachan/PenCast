<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pencast.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.pencast.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_chat_list"
        android:name="com.example.pencast.ui.chatList.ChatListFragment"
        android:label="@string/title_chats"
        tools:layout="@layout/fragment_chat_list" >
        <action
            android:id="@+id/action_navigation_chat_list_to_navigation_chat"
            app:destination="@id/navigation_chat" />
        <action
            android:id="@+id/action_navigation_chat_list_to_navigation_friends"
            app:destination="@id/navigation_friends" />
    </fragment>
    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.pencast.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_navigation_chat_to_navigation_chat_list"
            app:destination="@id/navigation_chat_list" />
        <argument
            android:name="friend"
            app:argType="com.example.pencast.ui.friend.Friend" />
    </fragment>
    <fragment
        android:id="@+id/navigation_friends"
        android:name="com.example.pencast.ui.friend.FriendsFragment"
        android:label="Friends"
        tools:layout="@layout/fragment_friends" >
        <action
            android:id="@+id/action_navigation_friends_to_navigation_chat"
            app:destination="@id/navigation_chat" />
        <action
            android:id="@+id/action_navigation_friends_to_navigation_chat_list"
            app:destination="@id/navigation_chat_list" />
    </fragment>
</navigation>